<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_salary_offer" model="ir.actions.report">
        <field name="name">Print Job Offer</field>
        <field name="model">hr.contract.salary.offer</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_offer.report_salary_offer_document</field>
        <field name="report_file">hr_offer.report_salary_offer_document</field>
        <field name="print_report_name">(object.applicant_id.partner_name or 'Offer') + ' - Salary Offer'</field>
        <field name="binding_model_id" ref="hr_contract_salary.model_hr_contract_salary_offer"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_welcome_letter" model="ir.actions.report">
        <field name="name">Print Welcome Letter</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_offer.report_welcome_letter_document</field>
        <field name="report_file">hr_offer.report_welcome_letter_document</field>
        <field name="print_report_name">(object.name or 'Welcome Letter') + ' - Welcome Letter'</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_type">report</field>
    </record>


</odoo>