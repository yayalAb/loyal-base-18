<?xml version="1.0" ?>
<odoo>
    <!-- This record defines the access control rule for the hr.shift.schedule model,
    allowing users to view records that belong to their company or are not
    company-specific -->
    <record id="property_rule_hr_shift" model="ir.rule">
        <field name="name">Hr Shift Multi Company</field>
        <field name="model_id" ref="model_hr_shift_schedule"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
    <!-- This record defines the access control rule for the hr.shift.generate model,
providing the same access control as the previous rule for generating shifts. -->
    <record id="property_rule_hr_shift_generate" model="ir.rule">
        <field name="name">Hr Shift Generate Multi Company</field>
        <field name="model_id" ref="model_hr_shift_generate"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</odoo>
