<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_appraisal_period_form" model="ir.ui.view">
        <field name="name">appraisal.period.form</field>
        <field name="model">appraisal.period</field>
        <field name="arch" type="xml">
            <form string="Appraisal Period">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Period Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Q1 2024"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="period_type"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_appraisal_period_list" model="ir.ui.view">
        <field name="name">appraisal.period.list</field>
        <field name="model">appraisal.period</field>
        <field name="arch" type="xml">
            <list string="Appraisal Periods" decoration-muted="period_type=='custom'">
                <field name="name"/>
                <field name="period_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="action_appraisal_period" model="ir.actions.act_window">
        <field name="name">Appraisal Periods</field>
        <field name="res_model">appraisal.period</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appraisal period.
            </p><p>
                Define the timeframes for your company's appraisals, such as quarters, half-years, or custom periods.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_appraisal_period"
        name="Appraisal Periods"
        action="action_appraisal_period"
        parent="hr_appraisal.menu_hr_appraisal_configuration"
        sequence="17"/>

</odoo>