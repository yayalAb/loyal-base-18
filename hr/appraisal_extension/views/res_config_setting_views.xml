<odoo>
    <record id="res_config_settings_view_form_inherit_appraisal_period" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.appraisal.period</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_appraisal.res_config_settings_view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[.//field[@name='appraisal_template_id']]" position="after">
                <setting string="Appraisal Period" help="Set the default period type for appraisals.">
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="period_type" string="Default Period" class="col-lg-4 o_light_label"/>
                            <field name="period_type"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>