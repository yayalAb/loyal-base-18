<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_users_form_inherit_deduction" model="ir.ui.view">
            <field name="name">res.users.form.inherit.deduction</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='access_rights']" position="inside">
                    <group string="Employee Deductions">
                        <field name="can_submit_deduction"/>
                        <field name="can_approve_deduction"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>