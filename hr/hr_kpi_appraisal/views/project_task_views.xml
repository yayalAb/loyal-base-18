<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_view_form_inherit_kpi" model="ir.ui.view">
        <field name="name">project.task.form.inherit.kpi</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">

            <!-- Add the 'Associated KPI' field below the 'Tags' field -->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="kpi_id" />
            </xpath>

            <xpath expr="//sheet/group/group[2]" position="inside">
                <field name="task_result" />
            </xpath>

        </field>
    </record>

    <record id="project_task_view_kanban_inherit" model="ir.ui.view">
        <field name="name">project.task.view.kanban.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//kanban/field[@name='state']" position="after">
                <field name="task_result" />
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="after">
                <div t-if="record.task_result.raw_value > 0" class="d-flex align-items-center"
                    title="Task Result" aria-label="Task Result" style="margin-right: 5px;">
                    <i
                        t-attf-class="fa fa-trophy me-1 {{
                    record.task_result.raw_value >= 75 ? 'text-success' :
                    record.task_result.raw_value >= 50 ? 'text-warning' : 'text-danger'
                }}"
                        role="img" />
                    <span class="fw-bold"><t t-esc="Math.round(record.task_result.raw_value)" />%</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>