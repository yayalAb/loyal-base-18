<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_project_view_form_inherit_kpi" model="ir.ui.view">
        <field name="name">project.project.form.inherit.kpi</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[2]" position="inside">
                <field name="project_result" />
            </xpath>
        </field>
    </record>

    <record id="project_project_view_kanban_inherit_result" model="ir.ui.view">
        <field name="name">project.project.kanban.inherit.result</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban/field[@name='allow_milestones']" position="after">
                <field name="project_result"/>
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="after">
            <div t-if="record.project_result.raw_value > 0" class="d-flex align-items-center"
                title="Project Result" aria-label="Project Result" style="margin-left: 5px;">
                <i t-attf-class="fa fa-trophy me-1 {{
                    record.project_result.raw_value >= 75 ? 'text-success' :
                    record.project_result.raw_value >= 50 ? 'text-warning' : 'text-danger'
                }}" role="img" />
                <span class="fw-bold"><t t-esc="Math.round(record.project_result.raw_value)" />%</span>
            </div>
            </xpath>
        </field>
    </record>
</odoo>