<!-- evaluation_batch_wizard_view.xml -->
<odoo>
    <record id='evaluation_batch_wizard_form_view' model='ir.ui.view'>
        <field name='name'>evaluation.batch.wizard.form.view</field>
        <field name='model'>evaluation.batch.wizard</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='department_id' options="{'no_create': True, 'no_open': True}"/>
                        <field name='job_id' options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <notebook>
                        <page string='Employees'>
                            <field name='employee_ids' nolabel="1">
                                <list editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="work_email" readonly="1"/>
                                    <field name="department_id" readonly="1"/>
                                    <field name="job_id" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name='generate_employee_evaluations'
                        string='Generate Evaluations'
                        type='object'
                        class="btn-primary" />

                    <button string="Cancel"
                        class="btn-secondary"
                        special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id='action_open_generate_evaluation_wizard' model='ir.actions.act_window'>
        <field name='name'>Generate Evaluations</field>
        <field name='res_model'>evaluation.batch.wizard</field>
        <field name='view_mode'>form</field>
        <field name='target'>new</field>
    </record>
</odoo>