<odoo>
    <data>
        <!-- Inherit the Payslip Tree View to add a button -->
        <record id="view_hr_payslip_tree_inherit_custom" model="ir.ui.view">
            <field name="name">hr.payslip.tree.inherit.custom</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_print_payslip']" position="after">
                    <button name="action_generate_payslip_report" 
                            type="object"
                            string="Payslip Report"
                            class="oe_highlight"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>