<odoo>
    <record id="view_hr_contract_salary_applicant_offer_visibility" model="ir.ui.view">
      <field name="name">hr.contract.salary.applicant.form.offer.visibility</field>
      <field name="model">hr.applicant</field>
      <field name="inherit_id" ref="hr_contract_salary.hr_applicant_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_generate_offer']" position="attributes">
          <attribute name="invisible">not active or application_status == 'hired' or not allow_generate_offer</attribute>
        </xpath>
      </field>
    </record>
</odoo>
