<odoo>
    <record id="view_bank_statement_wizard_form" model="ir.ui.view">
        <field name="name">bank.statement.wizard.form</field>
        <field name="model">hr.payroll.bank.statement.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="bank_ids" 
                           widget="many2many_tags" 
                           options="{'no_create': True}"
                           placeholder="Select Banks..."/>
                    
                    <field name="payslip_ids" invisible="1" />
                </group>
                <footer>
                    <button name="action_generate_report"
                        string="Generate Report(s)"
                        type="object"
                        class="btn-primary"
                        data-hotkey="q" />
                    <button string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                        data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_bank_statement_wizard" model="ir.actions.act_window">
        <field name="name">Generate Bank Statement Letter</field>
        <field name="res_model">hr.payroll.bank.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>