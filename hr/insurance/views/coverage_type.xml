<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

    <record id="coverage_type_action" model="ir.actions.act_window">
        <field name="name">Coverage Type</field>
        <field name="res_model">coverage.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
        <field name="context" eval="{'search_default_my_courses': 1}"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new type coverage type
            </p>

        </field>
    </record>
    <record id="coverage_type_view_form" model="ir.ui.view">
        <field name="name">Coverage Type</field>
        <field name="model">coverage.type</field>
        <field name="arch" type="xml">
            <form string="Employee Insurance">
                <sheet>
                    <group>
                        <group>
                               <field name="name"/>

                        </group>


                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="coverage_type_view_tree" model="ir.ui.view">
        <field name="name">insurance coverage</field>
        <field name="model">coverage.type</field>
        <field name="arch" type="xml">
            <list>

                 <field name="name"/>

            </list>
        </field>
    </record>

         <menuitem
            id="menu_employee_insurances_main"
            name="Insurances"/>
          <menuitem
            id="menu_employee_insurances_root"
            name="Configuration"
            sequence="4"
            parent="menu_employee_insurances_main"/>

          <menuitem
            id="menu_employee_insurance_coverage_type"
            name="Coverage Types"
            parent="menu_employee_insurances_root"
            action="coverage_type_action"/>
</data>

</odoo>
