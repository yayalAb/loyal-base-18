<?xml version="1.0"?>
<odoo>
    <data>

        
        <record model="ir.module.category" id="hr_job_requisition_groups_category">
            <field name="name">Job Requisition</field>
            <field name="description">Helps you manage job requisition</field>
        </record>
        
        <record id="hr_job_requisition_group_reject" model="res.groups">
            <field name="name">Reject</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
        </record>
        
        <record id="hr_job_requisition_group_requester" model="res.groups">
            <field name="name">Request</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
        </record>

        <record id="hr_job_requisition_group_approve_department" model="res.groups">
            <field name="name">Review</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
            <field name="implied_ids" eval="[(4, ref('hr_job_requisition_group_reject'))]" />
        </record>

        <record id="hr_job_requisition_group_approve_gm" model="res.groups">
            <field name="name">Approve</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
            <field name="implied_ids" eval="[(4, ref('hr_job_requisition_group_reject'))]" />
        </record>

        <record id="hr_job_requisition_group_authorize" model="res.groups">
            <field name="name">Authorize</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
            <field name="implied_ids" eval="[(4, ref('hr_job_requisition_group_reject'))]" />
        </record>

        <record id="hr_job_requisition_group_publish" model="res.groups">
            <field name="name">Publish</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
        </record>

        <record id="hr_job_requisition_group_reset_to_draft" model="res.groups">
            <field name="name">Reset To Draft</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
        </record>

        <record id="hr_job_requisition_group_approve_co" model="res.groups">
            <field name="name">Approve CO</field>
            <field name="category_id" ref="hr_job_requisition_groups_category" />
        </record>
    </data>
</odoo>