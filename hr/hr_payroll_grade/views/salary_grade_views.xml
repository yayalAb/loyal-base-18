<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- ACTION -->
  <record id="action_salary_grade" model="ir.actions.act_window">
    <field name="name">Salary Grades</field>
    <field name="res_model">salary.grade</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'group_by': 'salary_grade_value_id'}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Define salary grades here.
      </p>
    </field>
  </record>

  <!-- LIST VIEW -->
  <record id="view_salary_grade_list" model="ir.ui.view">
    <field name="name">salary.grade.list</field>
    <field name="model">salary.grade</field>
    <field name="arch" type="xml">
      <list string="Salary Grades" default_order="salary_grade_value_id">
        <field name="salary_grade_value_id"/>
        <field name="scale_level_id"/>
        <field name="name"/>
        <field name="wage"/>
      </list>
    </field>
  </record>

  <!-- FORM VIEW -->
  <record id="view_salary_grade_form" model="ir.ui.view">
    <field name="name">salary.grade.form</field>
    <field name="model">salary.grade</field>
    <field name="arch" type="xml">
      <form string="Salary Grade">
        <sheet>
            <group>
                <group string="Grade and Scale">
                  <field name="salary_grade_value_id"
                         options="{'no_create': False, 'no_open': False}"
                         placeholder="Create or select Grade…"/>
                  <field name="scale_level_id"
                         options="{'no_create': False, 'no_open': False}"
                         context="{'default_salary_grade_value_id': salary_grade_value_id}"
                         placeholder="Create or select Scale…"/>
                  <field name="position_id" options="{'no_create': False, 'no_open': False}"
                         placeholder="Create or select Position…"/>
                  <field name="company_id"/>
                </group>
                <group string="Base Salary">
                    <field name="name" string="Reference"/>
                    <field name="currency_id"/>
                    <field name="wage"/>
                </group>
            </group>

                <group string="Allowance Details">
                    <group>
                        <field name="house_rent_allowance"/>
                        <field name="dearness_allowance"/>
                        <field name="travel_allowance"/>
                        <field name="meal_allowance"/>
                        <field name="medical_allowance"/>
                        <field name="position_allowance"/>
                    </group>
                    <group>
                        <field name="transport_home_allowance"/>
                        <field name="transport_work_allowance"/>
                        <field name="fuel_allowance"/>
                        <field name="cash_indemnity_allowance"/>
                        <field name="professional_allowance"/>
                        <field name="other_allowance"/>
                    </group>
                </group>
          
        </sheet>
      </form>
    </field>
  </record>

  <!-- MENU ITEM -->
  <menuitem
    id="menu_hr_salary_grade"
    name="Salary Grades"
    parent="hr_payroll.menu_hr_salary_configuration"
    action="action_salary_grade"
    sequence="50"
  />
</odoo>
