<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_promotion_reject_wizard_form" model="ir.ui.view">
        <field name="name">promotion.reject.wizard.form</field>
        <field name="model">hr.promotion.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Promotion">
                <group>
                    <field name="promotion_id" readonly="1"/>
                    <field name="rejection_reason" placeholder="Please provide the reason for rejecting this promotion..."/>
                </group>
                <footer>
                    <button name="action_confirm_reject" string="Confirm Rejection" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_promotion_reject_wizard" model="ir.actions.act_window">
        <field name="name">Reject Promotion</field>
        <field name="res_model">hr.promotion.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_promotion_id': active_id}</field>
    </record>
</odoo>