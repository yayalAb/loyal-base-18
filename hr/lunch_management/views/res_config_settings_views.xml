<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_lunch" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.lunch</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//app[@name='general_settings']" position="after">
                <app data-string="Lunch Management" string="Lunch Management"
                    name="lunch_management" logo="/lunch_management/static/description/icon.png">
                    <block title="Meal Pricing" name="meal_pricing_setting_container">
                        <setting string="Meal Price"
                            help="The standard total price of a company-provided meal.">
                            <field name="meal_price" />
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>