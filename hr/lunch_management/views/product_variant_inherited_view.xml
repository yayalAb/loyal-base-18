<odoo>
    <record id='product_variant_inherited_form_view' model='ir.ui.view'>
        <field name='name'>product.variant.inherited.form.view</field>
        <field name='model'>product.product</field>
        <field name='inherit_id' ref='product.product_normal_form_view' />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='barcode']" position='after'>
                <field name='is_meal' />
            </xpath>
        </field>
    </record>

    <record id='product_template_inherited_form_view' model='ir.ui.view'>
        <field name='name'>product.template.inherited.form.view</field>
        <field name='model'>product.template</field>
        <field name='inherit_id' ref='product.product_template_only_form_view' />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='barcode']" position='after'>
                <field name='is_meal' />
            </xpath>
        </field>
    </record>
</odoo>