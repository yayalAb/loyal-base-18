<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_training_requisition" model="ir.module.category">
            <field name="name">Requisition Management</field>
            <field name="description">User access levels for the training Requisition module</field>
            <field name="sequence">18</field>
        </record>

        <record id="group_training_requisition_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_training_requisition"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">The user will be able to create and view their own requisitions.</field>
        </record>

        <record id="group_training_requisition_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="module_category_training_requisition"/>
            <field name="implied_ids" eval="[(4, ref('group_training_requisition_user'))]"/>
            <field name="comment">The manager can approve, reject, and manage all training requisitions.</field>
        </record>

    </data>
</odoo>