<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit_hs_code" model="ir.ui.view">
            <field name="name">product.template.form.inherit.hs.code</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
            <!-- Add the HS Code field in the General Information tab -->
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="x_hs_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>