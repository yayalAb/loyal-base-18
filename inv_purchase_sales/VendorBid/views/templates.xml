<odoo>
    <data>
        <template id="contact-sub-form">
            <h6 t-esc="title" />
            <div class="mb-2">
                <input type="text"
                    t-att-id="'contact_%s_name' % contact_id"
                    t-att-name="'contact_%s_name' % contact_id"
                    class="form-control"
                    placeholder="Name"
                    t-att-required="'required' if required else None"
                />
            </div>
            <div class="mb-2">
                <input type="email"
                    t-att-id="'contact_%s_email' % contact_id"
                    t-att-name="'contact_%s_email' % contact_id"
                    class="form-control"
                    placeholder="Email"
                    t-att-required="'required' if required else None"
                />
            </div>
            <div class="mb-2">
                <input type="tel"
                    t-att-id="'contact_%s_phone' % contact_id"
                    t-att-name="'contact_%s_phone' % contact_id"
                    class="form-control"
                    placeholder="Phone"
                    t-att-required="'required' if required else None"
                />
            </div>
            <div>
                <input type="text"
                    t-att-id="'contact_%s_address' % contact_id"
                    t-att-name="'contact_%s_address' % contact_id"
                    class="form-control"
                    placeholder="Address"
                    t-att-required="'required' if required else None"
                />
            </div>
        </template>

        <template id="client-reference-sub-form">
            <h6 t-esc="title" />
            <div class="mb-2">
                <input type="text"
                    t-att-id="'client_%s_name' % contact_id"
                    t-att-name="'client_%s_name' % contact_id"
                    class="form-control name"
                    data-requires-if="email,phone,address"
                    t-att-data-container-class="container_class or 'client'"
                    placeholder="Name"
                />
                <div class="invalid-feedback">
                    Name is required if any of email, phone, or address is provided.
                </div>
            </div>
            <div class="mb-2">
                <input type="email"
                    t-att-id="'client_%s_email' % contact_id"
                    t-att-name="'client_%s_email' % contact_id"
                    class="form-control email"
                    placeholder="Email"
                />
            </div>
            <div class="mb-2">
                <input type="tel"
                    t-att-id="'client_%s_phone' % contact_id"
                    t-att-name="'client_%s_phone' % contact_id"
                    class="form-control phone"
                    placeholder="Phone"
                />
            </div>
            <div>
                <input type="text"
                    t-att-id="'client_%s_address' % contact_id"
                    t-att-name="'client_%s_address' % contact_id"
                    class="form-control address"
                    placeholder="Address"
                />
            </div>
        </template>

        <template id="portal_supplier_registration">
            <t t-call="website.layout">
                <link rel="stylesheet" href="/VendorBid/static/src/css/registration.css" />
                <script
                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                    crossorigin="anonymous" />
                <div class="container">
                    <input type="hidden" id="csrf_token" name="csrf_token"
                        t-att-value="request.csrf_token()" />
                    <div class="row ">
                        <div class="col-md-12">
                            <div id="otp_container"
                                class="d-flex justify-content-center align-items-center">
                                <div class="row justify-content-center" id="window_1"
                                    style="margin: 5rem auto;">
                                    <div class="col-md-8 welcome-section text-center">
                                        <img
                                            src="/VendorBid/static/img/business-3d-happy-robot-assistant.png"
                                            alt="Supplier Network" class="img-fluid" />
                                        <h2 class="text-center mb-4">Join Our Supplier Network</h2>
                                        <div class="section-text text-center">
                                            <h5>
                                                We're on the hunt for top-notch suppliers who can
                                                deliver quality products every time. Want to team
                                                up, streamline our procurement, and uphold
                                                excellence? Let's get started below!
                                            </h5>
                                        </div>
                                        <div class="d-flex justify-content-center mt-5">
                                            <input id="email" type="email" class="form-control w-50"
                                                placeholder="Enter company email" />
                                            <button id="send_otp_btn" type="submit"
                                                class="btn btn-primary ms-3">Get Started</button>
                                        </div>
                                    </div>
                                </div>

                                <div id="window_2" style="display: none;margin: 5rem auto;">
                                    <div class="otp-form">
                                        <span class="mainHeading">Enter OTP</span>
                                        <p class="otpSubheading text-muted">We have sent a
                                            verification code to your email address</p>
                                        <div class="inputContainer">
                                            <t t-foreach="[1, 2, 3, 4, 5, 6]" t-as="i">
                                                <t t-if="i == 1">
                                                    <input maxlength="1" type="text"
                                                        class="otp-input" t-att-data-position="i" />
                                                </t>
                                                <t t-else="">
                                                    <input maxlength="1" type="text"
                                                        class="otp-input" t-att-data-position="i"
                                                        disabled="" />
                                                </t>
                                            </t>
                                        </div>
                                        <button id="verify_otp_btn" disabled="" class="verifyButton"
                                            type="submit">Verify</button>
                                        <p class="mt-2 text-muted resendNote"> Didn't receive the
                                            code? <button id="resend_otp_button" disabled=""
                                                class="resendBtn">Resend Code</button>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div id="registration_form_container" class="card shadow-sm my-5"
                                style="display: none;">
                                <div class="progress rounded-0" style="height: 8px;"
                                    role="progressbar" aria-label="Basic example" aria-valuenow="25"
                                    aria-valuemin="0" aria-valuemax="100">
                                    <div id="progress_bar" class="progress-bar"
                                        style="width: 20%;border-radius: 0;"></div>
                                </div>

                                <div class="card-body p-5 rounded-lg" id="steps_container">
                                    <div class="step" id="step_1">
                                        <h5 class="mb-4 text-primary border-bottom pb-3">Step 1:
                                            Company Information</h5>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">Company Name *</label>
                                                <input name="company_name" type="text"
                                                    class="form-control" required="" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Company Category</label>
                                                <select class="form-select"
                                                    name="company_category_type">
                                                    <option value="LLC">LLC</option>
                                                    <option value="PLC">PLC</option>
                                                    <option value="Limited">Limited</option>
                                                    <option value="Partnership">Partnership</option>
                                                    <option value="Sole Proprietorship">Sole
                                                        Proprietorship</option>
                                                    <option value="Others">Others</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Logo</label>
                                                <input type="file" class="form-control"
                                                    name="image_1920" accept=".jpg, .jpeg, .png"
                                                    required="" />
                                                <div class="invalid-feedback">
                                                    Please upload logo in JPG, JPEG, or PNG format.
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Supplier Type *</label>
                                                <select class="form-select" name="supplier_type"
                                                    required="">
                                                    <option value="">Select Type</option>
                                                    <option value="foreign">Foreign</option>
                                                    <option value="local" selected="selected">Local</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Product Category</label>
                                                <select class="form-select"
                                                    name="product_category_id">
                                                    <t t-foreach="categories" t-as="category">
                                                        <option t-att-value="category.id">
                                                            <t t-esc="category.name" />
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Trade License Number</label>
                                                <input type="text" class="form-control"
                                                    pattern="^(?:[a-zA-Z0-9]{8,20})?$"
                                                    name="trade_license_number" />
                                                <div class="invalid-feedback">
                                                    Please enter a valid Trade License Number.
                                                    Should be 8 to 20 characters long.
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Tax Identification Number
                                                    (TIN)</label>
                                                <input type="text" class="form-control"
                                                    pattern="^(?:\d{10}|)$" name="vat" />
                                                <div class="invalid-feedback">
                                                    Please enter a valid Tax Identification Number.
                                                    Should be a 10 digits number.
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Address Line 1 *</label>
                                                <input type="text" class="form-control"
                                                    name="street" required="" />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Expiry Date</label>
                                                <input
                                                    type="date"
                                                    class="form-control"
                                                    t-att-min="(datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d')"
                                                    name="expiry_date"
                                                />
                                                <div class="invalid-feedback">
                                                    Expiry date should be a future date.
                                                </div>
                                            </div>
                                        </div>

                                        <h4 class="mt-4">Contacts</h4>
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <t t-call="VendorBid.contact-sub-form">
                                                    <t t-set="contact_id" t-value="1" />
                                                    <t t-set="title">Primary Contact</t>
                                                    <t t-set="prefix">company</t>
                                                    <t t-set="required">required</t>
                                                </t>
                                            </div>
                                            <div class="col-md-4">
                                                <t t-call="VendorBid.contact-sub-form">
                                                    <t t-set="contact_id" t-value="2" />
                                                    <t t-set="title">Finance Contact</t>
                                                </t>
                                            </div>
                                            <div class="col-md-4">
                                                <t t-call="VendorBid.contact-sub-form">
                                                    <t t-set="contact_id" t-value="3" />
                                                    <t t-set="title">Authorized Contact</t>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="step" style="display: none;" id="step_2">
                                        <h5 class="mb-4 text-primary border-bottom pb-3">Step 2:
                                            Bank Information</h5>
                                        <div class="mb-3">
                                            <label for="bank_name" class="form-label">Bank Name </label>
                                            <input type="text" class="form-control"
                                                name="bank_name" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="swift_code" class="form-label">Bank
                                                SWIFT
                                                Code</label>
                                            <input type="text" class="form-control"
                                                name="swift_code" placeholder="E.g., BOFAUS3N" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="branch_address" class="form-label">Branch
                                                Address </label>
                                            <input type="text" class="form-control"
                                                name="branch_address" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="acc_number" class="form-label">Account
                                                Number </label>
                                            <input type="text" class="form-control"
                                                name="acc_number" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="acc_holder_name" class="form-label">Account
                                                Name</label>
                                            <input type="text" class="form-control"
                                                name="acc_holder_name" />
                                        </div>
                                    </div>
                                    <div class="step" style="display: none;" id="step_3">
                                        <h5 class="mb-4 text-primary border-bottom pb-3">Step 3:
                                            Client References</h5>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="client">
                                                    <t t-call="VendorBid.client-reference-sub-form">
                                                        <t t-set="contact_id" t-value="1" />
                                                        <t t-set="title">Client Reference 1</t>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="client" style="display: none;">
                                                    <t t-call="VendorBid.client-reference-sub-form">
                                                        <t t-set="contact_id" t-value="2" />
                                                        <t t-set="title">Client Reference 2</t>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="client" style="display: none;">
                                                    <t t-call="VendorBid.client-reference-sub-form">
                                                        <t t-set="contact_id" t-value="3" />
                                                        <t t-set="title">Client Reference 3</t>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="client" style="display: none;">
                                                    <t t-call="VendorBid.client-reference-sub-form">
                                                        <t t-set="contact_id" t-value="4" />
                                                        <t t-set="title">Client Reference 4</t>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="client" style="display: none;">
                                                    <t t-call="VendorBid.client-reference-sub-form">
                                                        <t t-set="contact_id" t-value="5" />
                                                        <t t-set="title">Client Reference 5</t>
                                                    </t>
                                                </div>
                                            </div>
                                        </div>
                                        <button class="btn btn-outline-primary"
                                            id="add_client_reference">Add More Client Reference</button>
                                    </div>
                                    <div class="step" style="display: none;" id="step_4">
                                        <h5 class="mb-4 text-primary border-bottom pb-3">Step 4:
                                            Certification</h5>
                                        <div class="mb-3">
                                            <label class="form-label">Certification</label>
                                            <input type="text" class="form-control"
                                                name="certification_name" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Certificate Number</label>
                                            <input type="text" class="form-control"
                                                name="certificate_number" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Certifying Body</label>
                                            <input type="text" class="form-control"
                                                name="certifying_body" />
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Award Date</label>
                                                <input
                                                    type="date"
                                                    class="form-control"
                                                    name="certification_award_date"
                                                    t-att-max="(datetime.datetime.now() - datetime.timedelta(days=1)).strftime('%Y-%m-%d')"
                                                />
                                                <div class="invalid-feedback">
                                                    Certification award date should be a past date.
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Expiry Date</label>
                                                <input
                                                    type="date"
                                                    class="form-control"
                                                    name="certification_expiry_date"
                                                    t-att-min="(datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d')"
                                                />
                                                <div class="invalid-feedback">
                                                    Certification expiry date should be a future
                                                    date.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="step" style="display: none;" id="step_5">
                                        <h5 class="mb-4 text-primary border-bottom pb-3">Step 5:
                                            Documents</h5>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">Trade License / Business
                                                    Registration</label>
                                                <input type="file" class="form-control"
                                                    name="trade_license_doc"
                                                    accept=".jpg, .jpeg, .png, .pdf" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">Establishment Card</label>
                                                <input type="file" class="form-control"
                                                    name="establishment_card_doc"
                                                    accept=".jpg, .jpeg, .png, .pdf" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">VAT / Tax Certificate</label>
                                                <input type="file" class="form-control"
                                                    name="vat_tax_certificate_doc"
                                                    accept=".jpg, .jpeg, .png, .pdf" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">Identification of
                                                    Authorised Person</label>
                                                <input type="file" class="form-control"
                                                    name="identification_of_authorised_person_doc"
                                                    accept=".jpg, .jpeg, .png, .pdf" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">Past 2 Years of Financial
                                                    Statement</label>
                                                <input type="file" class="form-control"
                                                    name="past_2_years_financial_statement_doc"
                                                    accept=".jpg, .jpeg, .png, .pdf" />
                                            </div>
                                        </div>
                                        <div class="mt-4 mb-3 pt-3 border-top">
                                            <h5 class="fw-bold text-primary">Declaration</h5>
                                            <p class="text-muted">
                                                Before submitting your documents, please read and
                                                confirm the following statement:
                                            </p>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                    id="declarationCheckbox" required="" />
                                                <label class="form-check-label fst-italic"
                                                    for="declarationCheckbox">
                                                    I confirm that all information and documents
                                                    supplied are true and accurate to the best of my
                                                    knowledge, and I understand that this
                                                    information may be considered material in the
                                                    evaluation
                                                    of quotations, bids, and/or proposals.
                                                </label>
                                            </div>
                                            <div class="row g-3 mt-3">
                                                <div class="col-md-4">
                                                    <label class="form-label fw-semibold">Name of
                                                        Signatory</label>
                                                    <input name="signatory_name" type="text"
                                                        class="form-control"
                                                        placeholder="Enter full name" required="" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label fw-semibold">Authorized
                                                        Signatory</label>
                                                    <input name="authorized_signatory_name"
                                                        type="text" class="form-control"
                                                        placeholder="Enter title or role"
                                                        required="" />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label fw-semibold">Company
                                                        Stamp</label>
                                                    <input name="company_stamp" type="file"
                                                        class="form-control" required=""
                                                        accept=".jpg, .jpeg, .png" />
                                                    <div class="invalid-feedback">
                                                        Select the company stamp.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end" id="form_action">
                                        <button id="prev_btn"
                                            class="btn btn-secondary rounded px-3 me-3"
                                            style="display: none;">Previous</button>
                                        <button id="next_btn" class="btn btn-primary rounded px-3">
                                            Next</button>
                                        <button id="submit_btn" class="btn btn-primary rounded px-3"
                                            style="display: none;" disabled="">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="toast-container position-fixed top-0 end-0 p-3"
                        style="z-index: 11111">
                        <div id="liveToast" class="toast text-bg-secondary" role="alert"
                            aria-live="assertive" aria-atomic="true">
                            <div class="toast-header">
                                <strong class="title me-auto" />
                                <button type="button" class="btn-close" data-bs-dismiss="toast"
                                    aria-label="Close" />
                            </div>
                            <div class="toast-body" />
                        </div>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="modal_1" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close" />
                                </div>
                                <div class="modal-body px-5">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="supplier_registration_success">
            <div
                class="d-flex flex-column justify-content-center align-items-center justify-content-center text-center">
                <i class="fa fa-check-circle text-success fa-5x" />
                <h4 class="mt-3">
                    <strong>Application Successfully Submitted!</strong>
                </h4>
                <p class="text-muted mt-2">
                    Thank you for your interest to become our supplier. We will review your
                    application and get back to you shortly.
                </p>
                <a href="/" class="btn btn-outline-primary mt-3">
                    <i class="fa fa-home me-2" /> Back to Homepage </a>
            </div>
        </template>

        <template id="supplier_registration_error">
            <div class="text-center p-4">
                <div class="mb-3">
                    <img src="/VendorBid/static/img/robot-assistant-error.png" alt="Error"
                        class="img-fluid" style="max-width: 120px;" />
                </div>

                <h4 class="fw-bold text-danger">Failed to Process Application!</h4>
                <p class="text-muted">Please resolve the following <t t-out="len(errors)" /> error<t
                        t-if="len(errors)>1">s</t> and try again.</p>

                <div class="mt-3 text-start">
                    <div class="alert alert-danger" t-foreach="errors" t-as="error">
                        <span class="text-muted font-weight-bold">
                            <t t-esc="error['loc']" />: </span>
                        <span class="text-danger">
                            <t t-if="error['type'] == 'missing'">
                                This field is required.
                            </t>
                            <t t-elif="error['type'] == 'string_pattern_mismatch'"> Invalid value
                                provided. <t t-esc="error['msg']" />. </t>
                            <t t-else="">
                                <t t-esc="error['msg']" />
                            </t>
                        </span>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>