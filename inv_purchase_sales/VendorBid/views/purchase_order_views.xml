<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="rfp_id" invisible="not rfp_id" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                    <field name="delivery_charge" column_invisible="not parent.rfp_id"/>
                </xpath>

                <!-- Modify 'bid_confirm' button: visible when user is not reviewer -->
                <xpath expr="//button[@id='bid_confirm']" position="attributes">
                    <attribute name="groups">VendorBid.group_supplies_approver</attribute>
                </xpath>

                <!-- Modify 'draft_confirm' button: visible when user is not reviewer -->
                <xpath expr="//button[@id='draft_confirm']" position="attributes">
                    <attribute name="groups">VendorBid.group_supplies_approver</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>