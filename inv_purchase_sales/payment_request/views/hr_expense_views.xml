<odoo>
    <record id="view_hr_expense_inherit_form" model='ir.ui.view'>
        <field name="name">hr.expense.form.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="before">
                <field name="foreign_purchase" />
                <field name="purchase_order_id" invisible="not foreign_purchase" />
            </xpath>

            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="lc_number" invisible="not foreign_purchase" />
                <field name="lc_amount" invisible="not foreign_purchase" />
                <field name="foreign_currency_amount" invisible="not foreign_purchase" />
            </xpath>

            <xpath expr="//field[@name='description']" position="after">
                <group>
                    <field name="narrative" invisible="not foreign_purchase" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>