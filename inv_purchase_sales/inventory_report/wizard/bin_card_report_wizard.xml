<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Property Sale report form view -->
    <record id="bin_card_report_view_form" model="ir.ui.view">
        <field name="name">Inventory Bin Card Report</field>
        <field name="model">bin.card.report</field>
        <field name="arch" type="xml">
            <form string="Inventory Balance Report">
                <group>
                    <field name="warehouse_ids" widget="many2many_tags"/>
                    <field name="product_ids" widget="many2many_tags"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_view" string="View"
                            class="btn-primary" type="object"/>
                    <button name="action_print_pdf" string="Print(PDF)"
                            class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Property Sale report action -->
    <record id="product_bin_card_report" model="ir.actions.act_window">
        <field name="name">bin.card.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bin.card.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

<!--    groups="advanced_property_management.group_property_manager"-->
    <menuitem id="product_bin_card_report_menu"
              name="Bin Card"
              parent="stock.menu_warehouse_report"
              action="product_bin_card_report"
              sequence="3"/>
</odoo>
