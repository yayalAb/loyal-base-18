<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Property Sale report form view -->
    <record id="manufacturing_balance_wizard_view_form" model="ir.ui.view">
        <field name="name">manufacturing.balance.report.view.form</field>
        <field name="model">manufacturing.balance.report</field>
        <field name="arch" type="xml">
            <form string="Inventory Balance Report">
                <group>
                    <field name="warehouse_ids" widget="many2many_tags"/>
                    <field name="category_ids" widget="many2many_tags"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="start_date"/>
                    <field name="end_date"/>

                </group>
                <footer>
                    <button name="action_view" string="View"
                            class="btn-primary" type="object"/>
                    <button name="action_print" string="Print(PDF)"
                            class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Property Sale report action -->
    <record id="action_manufacturing_stock_balance_report" model="ir.actions.act_window">
        <field name="name">Manufacturing Report Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">manufacturing.balance.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

<!--    groups="advanced_property_management.group_property_manager"-->
    <menuitem id="manufacturing_stock_balance_menu"
              name="Stock Balance"
              parent="mrp.menu_mrp_reporting"
              action="action_manufacturing_stock_balance_report"
              sequence="2"/>
</odoo>
