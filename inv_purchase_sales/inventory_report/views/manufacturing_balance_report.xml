<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_manufactured_balance_report_tree" model="ir.ui.view">
            <field name="name">manufacturing balance report</field>
            <field name="model">manufactured.balance.report.tree</field>
            <field name="arch" type="xml">
                <list string="Manufacturing Stock Balance"  create="False">
                    <field name="product_id" widget="many2one"/>
                    <field name="item_code"/>
                    <field name="manufactured_amount" sum="Total"/>
                     <field name="delivered_amount" sum="Total"/>
                     <field name="stock_balance" sum="Total"/>
                     <field name="manufactured_cost" sum="Total"/>
                     <field name="total_manufactured_cost" sum="Total"/>
                </list>
            </field>
        </record>
    <record id="view_stock_manufactured_report_search" model="ir.ui.view">
        <field name="name">manufactured.balance.report.tree search</field>
        <field name="model">manufactured.balance.report.tree</field>
        <field name="arch" type="xml">
            <search>
                 <field name="product_id"/>
                 <field name="item_code"/>
            </search>
        </field>
    </record>

    <record id="action_manufactured_balance_report_tree" model="ir.actions.act_window">
        <field name="name">manufactured balance report</field>
        <field name="res_model">manufactured.balance.report.tree</field>
        <field name="view_mode">list,search,graph,pivot</field>
        <field name="view_id" ref="view_manufactured_balance_report_tree"/>
        <field name="target">current</field>
    </record>

</odoo>
