<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_print_document_report_custom" model="ir.actions.report">
        <field name="name">Operation Documents</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_report.inventory_print_document_template_custom</field>
        <field name="report_file">inventory_report.inventory_print_document_template_custom</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="inventory_print_document_template_custom">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    .footer_span {
                        font-size: 18px;
                        font-weight: bold;
                        margin-bottom: 18px;
                    }
                    .print_doc_header {
                        text-align: center;
                        text-decoration: underline;
                        margin-bottom: 15px;
                    }
                </style>
                 <!-- <h3 class="print_doc_header">Jerr private Limited Company</h3> -->
                <t t-if="docs.picking_type_id.name == 'Receipts'">
                    <h5 class="print_doc_header">Good Receiving Voucher</h5>
                </t>
                <t t-elif="docs.picking_type_id.name == 'Returns'">
                    <h5 class="print_doc_header">Store Return Voucher</h5>
                </t>
                <t t-elif="docs.picking_type_id.name == 'Delivery Orders'">
                    <h5 class="print_doc_header">Delivery Orders Voucher</h5>
                </t>
                <t t-elif="docs.picking_type_id.name == 'Internal Transfers'">
                    <h5 class="print_doc_header">Finished Goods Receiving/Transfers Voucher</h5>
                </t>
                <t t-else="">
                    <h5 class="print_doc_header"><span t-esc="docs.picking_type_id.name or ''"/></h5>
                </t>

                <table class="table">
                    <thead>
                        <tr>
                            <th>NO</th>
                            <th>item Code</th>
                            <th>description</th>
                            <th>um</th>
                            <th>quantity</th>
                            <th>remark</th>
                        </tr>
                    </thead>
                    <t t-set="i" t-value="0"/>
                    <tbody>
                        <tr t-foreach="docs.move_ids_without_package" t-as="move">
                            <td>
                                <t t-set="i" t-value="i + 1"/>
                                <span t-esc="i"/>
                            </td>
                            <td>
                                <span t-esc="move.product_id.default_code or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.description_picking or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.product_id.uom_id.name or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.quantity_done"/>
                            </td>
                            <td>

                            </td>
                        </tr>
                    </tbody>
                </table><br/>
                <t t-if="docs.picking_type_id.name == 'Returns'">
                    <div class="row">
                        <div class="col-6">
                            <span class="footer_span">Received by:___________________________________</span>
                        <br/>
                          <span class="footer_span">Delivered  by:___________________________________</span>
                        <br/>
                            <span>Copy Dist Original Finance</span>
                        </div>
                        <div class="col-6">
                            <span class="footer_span">Sign: _________________________</span>
                        <br/>
                            <span class="footer_span">Sign: _________________________</span>
                        <br/>
                            <span>1st copy store clerk </span>
                        </div>


                    </div>
                </t>
                <t t-elif="docs.picking_type_id.name == 'Receipts'">

                   <p>Remark: ________________________________________________________________________________________________</p>
                    <div class="row">
                        <div class="col-5">
                            <span class="footer_span">Delivered by:____________________________________</span><br/>
                            <span class="footer_span">Approved by:_____________________________________</span><br/>
                            <span class="footer_span">Received by:_____________________________________</span><br/>

                        </div>
                        <div class="col-3">
                            <span class="footer_span">Sign: ____________________</span><br/>
                            <span class="footer_span">Sign: ____________________</span><br/>
                            <span class="footer_span">Sign: ____________________</span><br/>

                        </div>
                        <div class="col-4">
                            <span class="footer_span">Plate No: ____________________</span><br/>

                        </div>

                    </div><br/><br/>
                    <div class="row">
                        <div class="col-3">
                            <span>Copy Dist Original Finance</span>
                        </div>
                        <div class="col-3">
                            <span>1st copy store clerk</span>
                        </div>
                        <div class="col-3">
                            <span>2nd copy store</span>
                        </div>
                        <div class="col-3">
                            <span>4nd copy Import Export</span>
                        </div>

                    </div>
                </t>
                 <t t-elif="docs.picking_type_id.name == 'Delivery Orders'">
                     <div class="row">
                         <div class="col-5">
                            <span class="footer_span">Delivered by:____________________________________</span><br/>
                            <span class="footer_span">Checked by:____________________________________</span><br/>
                            <span class="footer_span">Approved by:_____________________________________</span><br/>
                            <span class="footer_span">Received by:_____________________________________</span><br/>
                         </div>
