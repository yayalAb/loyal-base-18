<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="store_request_document_report_custom_id" model="ir.actions.report">
        <field name="name">Store Request</field>
        <field name="model">approval.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_report.store_request_document_template_custom_id</field>
        <field name="report_file">inventory_report.store_request_document_template_custom_id</field>
        <field name="binding_model_id" ref="approvals.model_approval_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="store_request_document_template_custom_id">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    .footer_span {
                        font-size: 18px;
                        font-weight: bold;
                        margin-bottom: 18px;
                    }
                    .print_doc_header {
                        text-align: center;
                        text-decoration: underline;
                        margin-bottom: 15px;
                    }
                </style>
                 <!-- <h3 class="print_doc_header">Jerr private Limited Company</h3> -->
                 <h5 class="print_doc_header">Store Request Voucher</h5>


                <table class="table">
                    <thead>
                        <tr>
                            <th>NO</th>
                            <th>item Code</th>
                            <th>description</th>
                            <th>um</th>
                            <th>quantity</th>
                            <th>remark</th>
                        </tr>
                    </thead>
                    <t t-set="i" t-value="0"/>
                    <tbody>
                        <tr t-foreach="docs.product_line_ids" t-as="move">
                            <td>
                                <t t-set="i" t-value="i + 1"/>
                                <span t-esc="i"/>
                            </td>
                            <td>
                                <span t-esc="move.product_id.default_code or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.description or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.product_uom_id.name or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.quantity"/>
                            </td>
                            <td>

                            </td>
                        </tr>
                    </tbody>
                </table><br/>
                    <div class="row">
                        <div class="col-4">
                            <span class="footer_span">Requested by:_________________________</span>
                        </div>
                        <div class="col-4">
                            <span class="footer_span">Checked by: _________________________</span>
                        </div>
                        <div class="col-4">
                            <span class="footer_span">Approved by: _________________________</span>
                        </div>
                    </div><br/><br/>
                <div class="row">
                    <div class="col-4">
                        <p>Copy Dist Original Finance</p>

                    </div>
                    <div class="col-4">
                        <p>1st copy store control</p>
                    </div>
                    <div class="col-4">
                        <p>2nd copy Requested Department</p>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
