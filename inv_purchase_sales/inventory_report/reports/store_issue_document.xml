<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_delivery_print_document_report_custom" model="ir.actions.report">
        <field name="name">Issue Voucher</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_report.inventory_delivery_print_document_template_custom</field>
        <field name="report_file">inventory_report.inventory_delivery_print_document_template_custom</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="inventory_delivery_print_document_template_custom">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    .footer_span {
                        font-size: 18px;
                        font-weight: bold;
                        margin-bottom: 18px;
                    }
                    .print_doc_header {
                        text-align: center;
                        text-decoration: underline;
                        margin-bottom: 15px;
                    }
                </style>
                 <!-- <h3 class="print_doc_header">Jerr private Limited Company</h3> -->
                    <h5 class="print_doc_header">Store Issue Voucher</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th>NO</th>
                            <th>item Code</th>
                            <th>description</th>
                            <th>um</th>
                            <th>quantity</th>
                            <th>remark</th>
                        </tr>
                    </thead>
                    <t t-set="i" t-value="0"/>
                    <tbody>
                        <tr t-foreach="docs.move_ids_without_package" t-as="move">
                            <td>
                                <t t-set="i" t-value="i + 1"/>
                                <span t-esc="i"/>
                            </td>
                            <td>
                                <span t-esc="move.product_id.default_code or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.description_picking or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.product_id.uom_id.name or ''"/>
                            </td>
                            <td>
                                <span t-esc="move.quantity_done"/>
                            </td>
                            <td>

                            </td>
                        </tr>
                    </tbody>
                </table><br/>
                     <div class="row">
                         <div class="col-5">
                            <span class="footer_span">Issued by:____________________________________</span><br/>
                         </div>
                         <div class="col-3">
                             <span class="footer_span">Received by: ____________________</span><br/>

                         </div>
                         <div class="col-4">
                             <span class="footer_span">Approved by: ____________________</span><br/>
                         </div>
                     </div>

                     <div class="row">
                         <div class="col-4">
                             <p>Copy Dist</p>
                         </div>
                         <div class="col-4">
                             <p>Original-finance</p>
                         </div>
                         <div class="col-4">
                             <p>2nd copy-store</p>
                         </div>
                     </div>
            </t>
        </t>
    </template>
</odoo>
