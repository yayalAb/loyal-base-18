<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Payslip Employees form view-->
    <record id="stock_avilable_warehouse_list_view" model="ir.ui.view">
        <field name="name">avilable.warehouse.list</field>
        <field name="model">avilable.warehouse.list</field>
        <field name="arch" type="xml">
            <list string="Product on each stock">
                <!-- <field name="store_request_id"/> -->
                <field name="product_id"/>
                <field name="source_warehouse_id"/>
                <field name="product_uom_qty"/>
                <field name="product_uom"/>
                <field name="stock_available_qty"/>
                    <button name="action_store_transfer" 
                        string="Request Transfer" 
                        type="object" 
                        class="oe_highlight" 
                        icon="fa-truck"/>
            </list>
        </field>
    </record>
    <record id="stock_avilable_warehouse_list_action" model="ir.actions.act_window">
        <field name="name">Stock List</field>
        <field name="res_model">avilable.warehouse.list</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="stock_avilable_warehouse_list_view"/>
        <field name="target">new</field>
    </record>

    <record id="view_store_request_form_inherit" model="ir.ui.view">
        <field name="name">store.request.form.inherit</field>
        <field name="model">store.request</field>
        <field name="inherit_id" ref="store_request.view_store_request_form"/>
        <field name="arch" type="xml">
            <!-- Add your new button inside the header -->
            <header position="inside">
                <!-- Example of a new button - customize as needed -->
                 <field name="show_check_avilablity" invisible="1"/>
                <button name="check_avilablity_on_other_stock" 
                        string="Check Avilablity" 
                        type="object" 
                        class="oe_highlight" 
                        invisible="state != 'approved' or show_check_avilablity != True"/>

                 <div class="button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            icon="fa-truck"
                            type="object"
                            name="action_store_request"
                            invisible="transfer_count == 0"
                            string="Request"
                            help="View the created transfer"/>
                 </div>
        
                
            </header>
        </field>
    </record>
</odoo>
