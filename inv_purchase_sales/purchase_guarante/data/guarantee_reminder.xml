<odoo>
    <record id="ir_cron_guarantee_multi_reminders" model="ir.cron">
        <field name="name">Guarantee Expiry Multi Reminders</field>
        <field name="model_id" ref="purchase_guarante.model_purchase_guarante"/>
        <field name="state">code</field>
        <field name="code">model._cron_guarantee_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <record id="ir_cron_guarantee_payment_line_reminders" model="ir.cron">
        <field name="name">Guarantee: Payment Deadline Reminders</field>
        <field name="model_id" ref="purchase_guarante.model_purchase_guarante"/>
        <field name="state">code</field>
        <field name="code">model._cron_payment_deadline_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
