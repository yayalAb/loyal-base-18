<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_report_tree" model="ir.ui.view">
            <field name="name">Sale report</field>
            <field name="model">sale.report.tree</field>
            <field name="arch" type="xml">
                <list string="Stock Balance"  create="False">
                    <field name="category_id"/>
                    <field name="sub_category_id"/>
                    <field name="product_id"/>
                     <field name="quantity" sum="Total"/>
                     <field name="avg_amount" sum="Total"/>
                     <field name="price_tax" sum="Total"/>
                     <field name="total_amount" sum="Total"/>

                </list>
            </field>
        </record>
    <record id="sale_report_search" model="ir.ui.view">
    <field name="name">sale report search</field>
    <field name="model">sale.report.tree</field>
    <field name="arch" type="xml">
        <search>
             <field name="category_id"/>
                    <field name="sub_category_id"/>
                    <field name="product_id"/>
                     <field name="quantity" sum="Total"/>
                     <field name="avg_amount" sum="Total"/>
                     <field name="total_amount" sum="Total"/>
        </search>
    </field>
</record>

    <record id="sale_report_pivot" model="ir.ui.view">
    <field name="name">Sale report pivot</field>
    <field name="model">sale.report.tree</field>
    <field name="arch" type="xml">
        <pivot string="Sale Report">
                    <field name="category_id"/>
                    <field name="sub_category_id"/>
                    <field name="product_id"/>
                     <field name="quantity" sum="Total"/>
                     <field name="avg_amount" sum="Total"/>
                     <field name="total_amount" sum="Total"/>
        </pivot>
    </field>
</record>


    <record id="action_sale_report_tree" model="ir.actions.act_window">
        <field name="name">sale report</field>
        <field name="res_model">sale.report.tree</field>
        <field name="view_mode">list,search,graph,pivot</field>
        <field name="view_id" ref="sale_report_tree"/>
        <field name="target">current</field>
    </record>

</odoo>
