<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Lab test form view-->
    <record id="lab_test_result_view_form" model="ir.ui.view">
        <field name="name">lab.test.result.view.form</field>
        <field name="model">lab.test.result</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                 </header>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" readonly="True"/>
                            <field name="result_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="price" widget="monetary"/>
                            
                        </group>
                        <group>
                            <field name="uom_id"/>
                            <field name="parent_id"/>
                            <field name="attachment"/>
                            
                        </group>
                       
                    </group>
                     <!-- <group string="Result" invisible="result_type != 'range'">
                            <group>
                                <field name="upper_panic_value"/>
                                <field name="upper_limit"/>
                                <field name="man_upper_limit"/>
                                <field name="women_upper_limit"/>
                                <field name="qc_uppern__limit"/>
                                <field name="qc_upper_ab_limit"/>
                                <field name="mu_normal"/>

                            </group>
                            <group>
                                <field name="lower_panic_value"/>
                                <field name="lower_limit"/>
                                <field name="man_upper_lower"/>
                                <field name="women_upper_lower"/>
                                <field name="qc_lower_n_limit"/>
                                <field name="qc_lower_ab_limit"/>
                                <field name="mu_abnormal"/>
                            </group>
                        </group> -->
                        <group invisible="result_type != 'yes'">
                            <group>
                                <field name="yes_or_no" widget="radio" options="{'horizontal': true}"/>
                            </group>
                        </group>
                        <group invisible="result_type not in ('range','number')">
                            <group>
                                <field name="result_number"/>
                            </group>
                        </group>
                        <group invisible="result_type != 'selection'">
                            <group>
                                <field name="result_selection"  options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                        </group>
                    <notebook>
                        <!-- <page name="Options" string="Options" invisible="result_type != 'selection'">
                            <field name="option_ids" string="Options">
                                <list editable="bottom">
                                    <field name="name"/>
                                </list>
                            </field>
                        </page> -->
                        <page name="result" string="Result" invisible="result_type != 'text'">
                            <field name="result_htm"></field>
                        </page>
                        <page name="consult" string="Consult">
                            <field name="consult"></field>
                        </page>
                    </notebook>
                    <!-- <field name="medicine_ids">
                        <list editable="bottom">
                            <field name="medicine_id"/>
                            <field name="qty_available"/>
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="sub_total"/>
                        </list>
                    </field> -->
                </sheet>
            </form>
        </field>
    </record>
    <!--    Lab test tree view-->
    <record id="lab_test_result_view_tree" model="ir.ui.view">
        <field name="name">lab.test.result.view.tree</field>
        <field name="model">lab.test.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="test_id"/>
                <field name="lower_limit"/>
                <field name="result"/>
                <field name="upper_limit"/>
                <field name="uom_id"/>
            </list>
        </field>
    </record>
            <record id="lab_test_result_view_search" model="ir.ui.view">
        <field name="name">lab.test.result.view.search</field>
        <field name="model">lab.test.result</field>
        <field name="arch" type="xml">
            <search>
                 <!-- <filter string="Today's Draft Result" name="created_today_draft" domain="[('state','=','draft'),('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/> -->
                 <filter string="Today's Result" name="created_today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Last 7 Days" name="last_7_days" domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Month" name="this_month" domain="[('create_date', '>=', context_today().strftime('%Y-%m-01 00:00:00'))]"/>
            </search>
        </field>
    </record>
    <!--Lab test menu action-->
    <record id="lab_test_result_action" model="ir.actions.act_window">
        <field name="name">Laboratory Test Result</field>
        <field name="res_model">lab.test.result</field>
        <field name="view_mode">list,form</field>
         <field name="context">{'search_default_created_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Laboratory
            </p>
        </field>
    </record>
    <!--Lab test menu-->
    <menuitem id="patient_lab_test_result_menu" name="Results"
              parent="hospital_menu_laboratory" sequence="2"
              action="lab_test_result_action"/>
</odoo>
