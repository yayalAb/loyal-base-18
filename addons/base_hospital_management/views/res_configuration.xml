<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_hospital" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hospital</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Hospital" name="hospital">
                    <block title="Hospital Configuration">
                        <group>
                            <field name="patient_validity_days"/>
                        </group>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
