<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inherit_sale_order_lines_decoration" model="ir.ui.view">
        <field name="name">sale.order.line.decoration.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_header']" position="before">
                <group>
                    <group>
                        <field name="prescription_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="pricelist_id"/>
                    </group>
                </group>
                <field name="prescription_detail"/>

            </xpath>
            <xpath expr="//group[@name='sale_header']" position="attributes">
                <attribute name="invisible">prescription_id</attribute>
            </xpath>


        </field>
    </record>
</odoo>
