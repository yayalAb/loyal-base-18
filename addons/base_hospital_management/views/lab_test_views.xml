<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Lab test form view-->
    <record id="lab_test_view_form" model="ir.ui.view">
        <field name="name">lab.test.view.form</field>
        <field name="model">lab.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="lab_code" readonly="True"/>
                            <field name="product_id"/>
                            <!-- <field name="name"/> -->
                            <field name="patient_lead" widget="float_time"/>
                            <!-- <field name="test_type"/> -->
                            <field name="sample_type_id"/>
                            <field name="price" widget="monetary" readonly="1"/>
                        </group>
                        <group>
                            <field name="result_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="category_id"/>
                            <field name="uom_id"/>
                            <field name="lab_id"/>
                            
                        </group>
                       
                    </group>
                     <group string="Result" invisible="result_type != 'range'">
                            <group>
                                <field name="upper_panic_value"/>
                                <field name="upper_limit"/>
                                <field name="man_upper_limit"/>
                                <field name="women_upper_limit"/>
                                <field name="qc_uppern__limit"/>
                                <field name="qc_upper_ab_limit"/>
                                <field name="mu_normal"/>

                            </group>
                            <group>
                                <field name="lower_panic_value"/>
                                <field name="lower_limit"/>
                                <field name="man_upper_lower"/>
                                <field name="women_upper_lower"/>
                                <field name="qc_lower_n_limit"/>
                                <field name="qc_lower_ab_limit"/>
                                <field name="mu_abnormal"/>
                            </group>
                        </group>
                        <group invisible="result_type != 'yes'">
                            <group>
                                <field name="yes_or_no" widget="radio" options="{'horizontal': true}"/>
                            </group>
                        </group>
                        <group invisible="result_type != 'number'">
                            <group>
                                <field name="result_number"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="has_sub_investgation"/>
                            </group>
                        </group>

                    <notebook>
                        <page name="consult" string="Consult">
                            <field name="consult"></field>
                            
                        </page>
                        <page name="Options" invisible="result_type != 'selection'">
                             <field name="option_ids" string="Options">
                                <list editable="bottom">
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                        <page name="sub_investgation" string="Sub Investigations" invisible="not has_sub_investgation">
                             <field name="sub_test_ids" string="Sub Investigations">
                                <list editable="bottom">
                                    <field name="sub_test_id"/>
                                </list>
                            </field>
                        </page>
                        <page name="result" string="Result" invisible="result_type != 'text'">
                            <field name="result_htm"></field>
                        </page>
                        
                       
                    </notebook>
                    <!-- <field name="medicine_ids">
                        <list editable="bottom">
                            <field name="medicine_id"/>
                            <field name="qty_available"/>
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="sub_total"/>
                        </list>
                    </field> -->
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!--    Lab test tree view-->
    <record id="lab_test_view_tree" model="ir.ui.view">
        <field name="name">lab.test.view.tree</field>
        <field name="model">lab.test</field>
        <field name="arch" type="xml">
            <list>
                <field name="lab_code"/>
                <field name="product_id"/>
                <field name="category_id"/>
                <field name="sample_type_id"/>
                <field name="patient_lead" widget="float_time"/>
                <!-- <field name="tax_ids" widget="many2many_tags"/> -->
                <field name="price" widget="monetary" readonly="1"/>
            </list>
        </field>
    </record>
    <!--Lab test menu action-->
    <record id="lab_test_action" model="ir.actions.act_window">
        <field name="name">Investigation</field>
        <field name="res_model">lab.test</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Laboratory
            </p>
        </field>
    </record>
    <!--Lab test menu-->
    <menuitem id="lab_test_menu" name="Investigation"
              parent="hospital_menu_root" sequence="4"
              action="lab_test_action"/>
</odoo>
