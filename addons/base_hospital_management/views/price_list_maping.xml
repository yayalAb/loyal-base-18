<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Lab test form view-->
    <record id="price_patient_mapping_view_form" model="ir.ui.view">
        <field name="name">price.patient.mapping.form</field>
        <field name="model">price.patient.mapping</field>
        <field name="arch" type="xml">
            <form>
            <header>
            <!-- <button name="action_seen" string="Seen"
                    type="object"
                    invisible="status != 'draft' or  id == False"
                    groups="base_hospital_management.base_hospital_management_group_manager,base_hospital_management.base_hospital_management_group_receptionist"
                    class="oe_highlight"/>
                    <field name="status" widget="statusbar"/> -->
            </header>
                <sheet>
                    <group>
                        <field name="apply_on"/>
                    </group>
                    <group><field name="price_list_id"/></group>
                    <field name="description"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--    Lab test tree view-->
    <record id="price_patient_mapping_view_tree" model="ir.ui.view">
        <field name="name">price.patient.mapping.view.tree</field>
        <field name="model">price.patient.mapping</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="1">
                <field name="apply_on"/>
                 <field name="price_list_id"/>
                 <field name="description"/>                   
            </list>
        </field>
    </record>
    <!--Lab test menu action-->
    <record id="price_patient_mapping_action" model="ir.actions.act_window">
        <field name="name">price.patient.mapping</field>
        <field name="res_model">price.patient.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create progress note
            </p>
        </field>
    </record>
    
    <menuitem id="price_patient_mapping_menu" name="Price Mapping" sequence="51"
              parent="hospital_menu_configuration"
               action="price_patient_mapping_action"/>
</odoo>
