<?xml version="1.0" encoding="utf-8" ?>
<odoo>
      <!-- country -->
    <record id="address_country_view_tree" model="ir.ui.view">
        <field name="name">address.country.view.tree</field>
        <field name="model">address.country</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>
    
    <record id="address_country_action" model='ir.actions.act_window'>
        <field name="name">address.country</field>
        <field name="res_model">address.country</field>
        <field name="view_mode">list</field>
    </record>
    <!-- region -->

        <record id="address_region_view_tree" model="ir.ui.view">
        <field name="name">address.region.view.tree</field>
        <field name="model">address.region</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="country_id"/>
                <field name="name"/>
            </list>
        </field>
    </record>
    
    <record id="address_region_action" model='ir.actions.act_window'>
        <field name="name">address.region</field>
        <field name="res_model">address.region</field>
        <field name="view_mode">list</field>
    </record>

    <!-- City -->


        <record id="address_city_view_tree" model="ir.ui.view">
        <field name="name">address.city.view.tree</field>
        <field name="model">address.city</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="region_id"/>
                <field name="name"/>
            </list>
        </field>
    </record>
    
    <record id="address_city_action" model='ir.actions.act_window'>
        <field name="name">address.city</field>
        <field name="res_model">address.city</field>
        <field name="view_mode">list</field>
    </record>
  <!-- woreda -->

        <record id="address_woreda_view_tree" model="ir.ui.view">
        <field name="name">address.woreda.view.tree</field>
        <field name="model">address.woreda</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="city_id"/>
                <field name="name"/>
            </list>
        </field>
    </record>
    
    <record id="address_woreda_action" model='ir.actions.act_window'>
        <field name="name">address.woreda</field>
        <field name="res_model">address.woreda</field>
        <field name="view_mode">list</field>
    </record>



    <record id="address_kebele_view_tree" model="ir.ui.view">
        <field name="name">address.kebele.view.tree</field>
        <field name="model">address.kebele</field>
        <field name="arch" type="xml">
            <list create="1" editable="bottom">
                <field name="woreda_id"/>
                <field name="name"/>
            </list>
        </field>
    </record>
    
    <record id="address_kebele_action" model='ir.actions.act_window'>
        <field name="name">address.kebele</field>
        <field name="res_model">address.kebele</field>
        <field name="view_mode">list</field>
    </record>


    <menuitem id="address_menu" name="Address" sequence="50"
              parent="hospital_menu_configuration"/>
    
    <menuitem id="address_country_menu" name="Countries" sequence="1"
              parent="address_menu"
               action="address_country_action"/>
    <menuitem id="address_region_menu" name="Regions" sequence="1"
              parent="address_menu"
               action="address_region_action"/>
    <menuitem id="address_city_menu" name="City/Zone" sequence="1"
              parent="address_menu"
               action="address_city_action"/>
    <menuitem id="address_woreda_menu" name="Woreda" sequence="1"
              parent="address_menu"
               action="address_woreda_action"/>
    <menuitem id="address_kebele_menu" name="Kebele" sequence="1"
              parent="address_menu"
               action="address_kebele_action"/>
</odoo>