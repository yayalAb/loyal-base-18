<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Lab test form view-->
    <record id="hospital_vital_signs_view_form" model="ir.ui.view">
        <field name="name">hospital.vital.signs.form</field>
        <field name="model">hospital.vital.signs</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="mode_of_arrival" widget="radio" options="{'horizontal': true}"/>
                            <field name="Status" widget="radio" options="{'horizontal': true}"/>
                            <field name="temperature"/>
                            <field name="pulse"/>
                            <field name="respiration_rate"/>
                            <field name="date_recorded"/>
                            <field name="is_reffered"/>
                        </group>
                        <group >
                            <field name="pain_level" widget="radio" options="{'horizontal': true}"/>
                            <label for="systolic" string="Blood pressure"/>
                            <div class="o_row">
                                <field name="systolic" nolabel="1" class="oe_inline"/>
                               <span class="mx-2" style="font-weight:bold; font-size: 16px;">/</span>
                                <field name="diastolic" nolabel="1" class="oe_inline"/>
                            </div>    
                            <field name="oxygen_saturation"/>
                            <field name="weight"/>
                            <field name="height"/>
                            <field name="bmi"/>
                            <field name="bsa"/>
                        </group>
                        <div class="o_row">
                           <field name="is_emergency" /><span class="ms-2" style="color:red;">Emergency Patient(Please Give Priority)</span>
                        </div>
                    </group>
                    <notebook>
                        <page string="Current Medication">
                            <field name="current_medication"/>
                        </page>
                        <page string="Reason For Visit">
                            <field name="reason_for_visit"/>
                        </page>
                        <page string="Allergy">
                            <field name="allergy"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!--    Lab test tree view-->
    <record id="hospital_vital_signs_view_tree" model="ir.ui.view">
        <field name="name">hospital.vital.signs.view.tree</field>
        <field name="model">hospital.vital.signs</field>
        <field name="arch" type="xml">
            <list>
                <field name="date_recorded" optional="show"/>
                <field name="mode_of_arrival" optional="hide"/>
                <field name="is_reffered" optional="hide"/>
                <field name="Status" optional="hide"/>
                <field name="temperature" optional="show"/>
                <field name="pulse"  optional="show"/>
                <field name="respiration_rate" optional="show"/>
                <field name="blood_pressure" optional="show"/>
                <field name="oxygen_saturation" optional="show"/>
                <field name="weight" optional="show"/>
                <field name="height" optional="show"/>
                <field name="bmi" optional="show"/>
                <field name="bsa" optional="hide"/>
                <field name="current_medication" optional="hide"/>
                <field name="reason_for_visit" optional="hide"/>
                <field name="pain_level" optional="hide"/>
                <field name="allergy" optional="hide"/>
                <field name="is_emergency" optional="hide"/>
            </list>
        </field>
    </record>
    <!--Lab test menu action-->
    <record id="hospital_vital_signs_action" model="ir.actions.act_window">
        <field name="name">hospital.vital.signs</field>
        <field name="res_model">hospital.vital.signs</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Laboratory
            </p>
        </field>
    </record>
    <!--Lab test menu-->
    <!-- <menuitem id="lab_test_menu" name="Lab Test"
              parent="hospital_menu_laboratory" sequence="4"
              action="lab_test_action"/> -->
</odoo>
