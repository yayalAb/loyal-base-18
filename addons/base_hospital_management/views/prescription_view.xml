<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Lab test form view-->
    <record id="hospital_prescription_view_form" model="ir.ui.view">
        <field name="name">hospital.prescription.form</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <form>
            <header>
            <button name="action_create_sale_order" string="Create Order"
                    type="object"
                    invisible="state != 'new' or id == False"
                    groups="base_hospital_management.base_hospital_management_group_manager,base_hospital_management.base_hospital_management_group_receptionist"
                    class="oe_highlight"/>
                    <field name="state" widget="statusbar"/> 
            </header>
                <sheet>
                    <group>
                        <field name="res_partner_id"/>         
                    </group>
                    <group>
                        <field name="patient_type"  widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <notebook>
                        <page name="prescription" string="prescription">
                            <field name="prescription_line_ids" string="Prescription">
                                <list editable="bottom">
                                    <field name="medication_name"/>
                                    <field name="no_intakes"/>
                                    <field name="time"/>
                                    <field name="note"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>
                        </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--    Lab test tree view-->
    <record id="hospital_prescription_view_tree" model="ir.ui.view">
        <field name="name">hospital.prescription.view.tree</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <list decoration-warning="state == 'new'">
                <field name="res_partner_id"/>
                <field name="patient_type"/>
                <field name="number_of_lines"/>
                <field name="state"/>                   
            </list>
        </field>
    </record>
    <!--Lab test menu action-->
    <record id="hospital_prescription_action" model="ir.actions.act_window">
        <field name="name">hospital.prescription</field>
        <field name="res_model">hospital.prescription</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create progress note
            </p>
        </field>
    </record>
    
    <menuitem id="hospital_prescription_menu" name="Prescription" sequence="51"
              parent="appointment_menu_patient"
               action="hospital_prescription_action"/>
</odoo>
