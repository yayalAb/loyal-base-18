<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Lab test form view-->
    <record id="order_sheet_view_form" model="ir.ui.view">
        <field name="name">order.sheet.form</field>
        <field name="model">order.sheet</field>
        <field name="arch" type="xml">
            <form>
            <header>
            <button name="action_seen" string="Seen"
                    type="object"
                    invisible="status != 'draft' or  id == False"
                    groups="base_hospital_management.base_hospital_management_group_manager,base_hospital_management.base_hospital_management_group_receptionist"
                    class="oe_highlight"/>
                    <field name="status" widget="statusbar"/>
            </header>
                <sheet>
                    <group>
                        <field name="order"/>
                        <field name="date"/>
                        <field name="seen_by_id" readonly="1" invisible="not seen_by_id"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!--    Lab test tree view-->
    <record id="order_sheet_view_tree" model="ir.ui.view">
        <field name="name">order.sheet.view.tree</field>
        <field name="model">order.sheet</field>
        <field name="arch" type="xml">
            <list decoration-warning="status == 'draft'">
                <field name="order"/>
                 <field name="date"/>
                 <field name="status"/>
                                       
            </list>
        </field>
    </record>
        <record id="order_sheet_view_search" model="ir.ui.view">
        <field name="name">order.sheet.view.search</field>
        <field name="model">order.sheet</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Today's Unseen Order" name="created_today_unseen" domain="[('status', '=', 'draft'),('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Today's Order" name="created_today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Last 7 Days" name="last_7_days" domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Month" name="this_month" domain="[('create_date', '>=', context_today().strftime('%Y-%m-01 00:00:00'))]"/>
            </search>
        </field>
    </record>
    <!--Lab test menu action-->
    <record id="order_sheet_action" model="ir.actions.act_window">
        <field name="name">order.sheet</field>
        <field name="res_model">order.sheet</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_created_today_unseen': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create progress note
            </p>
        </field>
    </record>

        <menuitem id="order_sheet_menu" name="Order Sheet" sequence="51"
              parent="hospital_menu_appointment"
               action="order_sheet_action"/>
</odoo>
