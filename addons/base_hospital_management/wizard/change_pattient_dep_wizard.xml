<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="patient_department_change_wizard_view" model="ir.ui.view">
            <field name="name">patient.department.change.wizard.view</field>
            <field name="model">patient.department.change</field>
            <field name="arch" type="xml">
                <form string="Patient Department">
                    <!-- <separator
                        string="" /> -->
                        <group>
                            <group>
                                <field name="old_department_id" readonly="1"/>
                                <field name="new_department_id" domain="[('id', '!=', old_department_id)]"/>
                            </group>

                        </group>
                    
                    <footer>
                        <button name="change_patient_department"
                            class="oe_highlight" string="Confirm"
                            type="object" />
                        or
                        <button special="cancel" string="Cancel"
                            class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_change_patient_department" model="ir.actions.act_window">
            <field name="name">patient.department.change</field>
            <field name="res_model">patient.department.change</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>
