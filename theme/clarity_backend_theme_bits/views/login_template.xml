<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <template id="web.login" name="Login">
        <t t-call="web.login_layout">
            <div class="row" style="background-color: #f8fafd; height: 100vh;">
                <div class="col-lg-7 col-md-6 d-none d-sm-block" style="background-color: #f8fafd;  height: 100vh; padding:5px">
                    <img class="img-fluid login_side_image"
                        src="/clarity_backend_theme_bits/static/description/nerp.png" 
                        alt="Description of the image"
                         style="width: 100%;"
                        />
                </div>
            <div class="col-lg-5 col-md-6 col-sm-12 d-flex justify-content-center align-items-center  parent-container" >
             <div class="login_side_container p-4 mt-2 d-flex flex-column gap-5 bg-white item-align-center" style="width: 400px;">
                   <owl-component t-if="not login" name="web.user_switch" />
                    <form t-attf-class="oe_login_form #{'' if login else 'd-none'}" role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="mb-2 field-login content-center text-center">
                            <img class="img-fluid"
                                    src="/clarity_backend_theme_bits/static/description/hi.png" 
                                    alt="Hi"
                                    />
                            <div class="heading_wellcome">Welcome back!</div>
                            <div class="heading_wellcome1 mb-5">Please login to access your account.</div>
                            
                        </div>
                        <div class="mb-3 " t-if="databases and len(databases) &gt; 1">
                            <label for="db" class="col-form-label"></label>
                            <div class="input-group">
                                <input type="text" name="db" t-att-value="request.db" id="db" class="form-control" required="required" readonly="readonly"/>
                                <a role="button" href="/web/database/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i></a>
                            </div>
                        </div>
                    
                        <div class="mb-4 field-login mt-6">
                            <label for="login" class="form-label d-flex justify-content-between login_color">Username</label>
                            <input type="text" placeholder="Enter your username" name="login" t-att-value="login" id="login" class="form-control login_color form_padding" required="required" autocapitalize="off" autocomplete="username"/>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label d-flex justify-content-between login_color">Password</label>
                            <input type="password" placeholder="Enter your password" name="password" id="password" class="form-control login_color form_padding" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>

                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-esc="message"/>
                        </p>

                        <div class="oe_login_buttons text-center gap-1 d-grid mb-1 pt-3">
                            <button type="submit" class="btn btn-primary login_color_button">Log in <i class="fa fa-arrow-right"></i></button>
                            <t t-if="debug">
                                <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm login_color">Log in as superuser</button>
                            </t>
                           
                            <div class="o_login_auth"/>
                        </div>

                        <input type="hidden" name="type" value="password"/>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                         <div class="text-center small mt-4 pt-3">
                                <a href="https://niyatconsultancy.com/" target="_blank">Powered by <span style="font-weight: bold !important;">Niyat Consultancy</span></a>
                            </div>
                    </form>
                           

                </div>
              </div>
            </div>
            
        </t>
    </template>
    
</odoo>