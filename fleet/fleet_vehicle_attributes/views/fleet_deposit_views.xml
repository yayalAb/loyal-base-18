<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fuel_deposit_list" model="ir.ui.view">
        <field name="name">fuel.deposit.list</field>
        <field name="model">fuel.deposit</field>
        <field name="arch" type="xml">
            <list decoration-danger="remaining_amount &lt;= 0"
                decoration-muted="is_active == False">
                <field name="name" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="initial_amount" />
                <field name="used_amount" />
                <field name="remaining_amount" />
                <field name="is_active" />
            </list>
        </field>
    </record>

    <record id="view_fuel_deposit_form" model="ir.ui.view">
        <field name="name">fuel.deposit.form</field>
        <field name="model">fuel.deposit</field>
        <field name="arch" type="xml">
            <form string="Fuel Deposit">
                <header>
                    <button name="action_deactivate"
                        string="Deactivate"
                        type="object"
                        class="btn-secondary"
                        invisible="is_active == False" />

                    <button name="action_transfer_to_active"
                        string="Transfer to Active"
                        type="object"
                        class="btn-primary"
                        invisible="is_active == True" />

                    <button name="action_activate"
                        string="Activate"
                        type="object"
                        class="btn-primary"
                        invisible="is_active == True" />

                    <field name="is_active" widget="boolean_toggle" readonly="1" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_fuel_logs"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-shopping-cart"
                            invisible="fuel_logs_count == 0">
                            <field name="fuel_logs_count" widget="statinfo"
                                string="Fuel Logs" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_start" />
                            <field name="date_end" readonly="1" />
                        </group>
                        <group>
                            <field name="initial_amount" />
                            <field name="used_amount" readonly="1" />
                            <field name="remaining_amount" readonly="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fuel_deposit_search" model="ir.ui.view">
        <field name="name">fuel.deposit.search</field>
        <field name="model">fuel.deposit</field>
        <field name="arch" type="xml">
            <search string="Search Fuel Deposits">
                <field name="name" />
                <filter name="active_records" string="Active" domain="[('is_active', '=', True)]" />
                <separator />
                <filter name="inactive_records" string="Inactive"
                    domain="[('is_active', '=', False)]" />

            </search>
        </field>
    </record>

    <record id="action_fuel_deposit" model="ir.actions.act_window">
        <field name="name">Fuel Deposits</field>
        <field name="res_model">fuel.deposit</field>
        <field name="view_mode">list,form</field>

        <!-- Link the action to our new search view. -->
        <field name="search_view_id" ref="view_fuel_deposit_search" />
        <field name="context">{'search_default_active_records': 1}</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first fuel deposit
            </p>
        </field>
    </record>

    <menuitem id="menu_fuel_deposit_root"
        name="Fuel Deposits"
        parent="fleet.fleet_vehicles"
        sequence="5"
        action="action_fuel_deposit" />
</odoo>