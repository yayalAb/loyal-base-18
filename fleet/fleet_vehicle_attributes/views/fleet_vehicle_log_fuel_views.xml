<odoo>
    <record id='fleet_log_fuel_inherited_form' model="ir.ui.view">
        <field name="name">fleet.log.fuel.inherited.form</field>
        <field name="model">fleet.vehicle.log.fuel</field>
        <field name="inherit_id" ref="fleet_vehicle_log_fuel.fleet_vehicle_log_fuel_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_row']" position="after">
                <field name="last_recorded_odometer" readonly="last_recorded_odometer"/>
                <field name="used_miles" readonly="1"/>
                <field name="used_miles_per_liter" readonly="1"/>
            </xpath>
            
            <xpath expr="//field[@name='vendor_id']" position="after">
                <field name="fuel_deposit_id" readonly="1"/>
                <field name='remaining_deposit_amount' readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>