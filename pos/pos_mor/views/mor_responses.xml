<odoo>
    <!-- list View -->
    <record id="view_mor_api_invoice_list" model="ir.ui.view">
        <field name="name">mor.api.invoice.list</field>
        <field name="model">mor.api.invoice</field>
        <field name="arch" type="xml">
            <list string="MoR API Tokens" create="false" edit="false" delete="false">
                <field name="move_id"/>
                <field name="name"/>
                <field name="documant_no"/>
                <field name="irn"/>
                <field name="ack_date"/>
                <field name="signed_qr"/>
                <field name="signed_invoice"/>
                <field name="error_message"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_mor_api_invoice_form" model="ir.ui.view">
        <field name="name">mor.api.invoice.form</field>
        <field name="model">mor.api.invoice</field>
        <field name="arch" type="xml">
            <form string="MoR API Token" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <field name="move_id"/>
                        <field name="documant_no"/>
                        <field name="name"/>
                        <field name="irn"/>
                        <field name="ack_date"/>
                        <field name="signed_qr"/>
                        <field name="signed_invoice"/>
                        <field name="error_message"/>
                        <field name="status"/>
                        <field name="response_message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mor_api_invoice" model="ir.actions.act_window">
        <field name="name">Invoice Status</field>
        <field name="res_model">mor.api.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_mor_api_invoice_list"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Records are created automatically via the MoR integration.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_mor_api_invoice"
              name="MoR Invoice Response"
              parent="point_of_sale.menu_point_config_product"
              sequence="52"
              action="action_mor_api_invoice"/>
</odoo>
