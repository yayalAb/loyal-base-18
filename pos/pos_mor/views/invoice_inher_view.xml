<odoo>
    <record id="view_account_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.mor</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
        <xpath expr="//header/button[@name='action_send_and_print']" position="after">
                <button name="send_invoice_multi_to_mor"
                        type="object"
                        string="Send to MOR"
                        class="btn-primary"/>
                <button name="send_invoice_single_to_mor"
                        type="object"
                        string="Send to MOR Single"
                        class="btn-primary"/>
                <button name="cancel_multi_invoice_mor"
                        type="object"
                        string="Cancel Invoice"
                        class="btn-primary"/>
            </xpath>

            <!-- <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="irn" invisible="not irn"/>
            </xpath> -->
                
        </field>
    </record>
    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.mor</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@id='invoice_tab']" position="after">
                <page string="IRN" name="INVOICE_IRN">
                    <group>
                         <field name="irn"/>
                         <field name="status"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>