<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_mor" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.mor.button</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">

            <!-- Add the button inside the header -->
            <xpath expr="//header" position="inside">
                <button name="action_send_to_mor"
                        string="Send Receipt"
                        type="object"
                        class="btn-primary"
                        icon="fa-send" />
            </xpath>

        </field>
    </record>
</odoo>
