<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
	    <field name="model">res.config.settings</field>
	    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
	    <field name="arch" type="xml">
	    	<xpath expr="//block[@id='user_default_rights']" position="before">
                <block title="MOR API Configuration" id="app_settings_block">
	    			<!-- <setting string="Light Mode Colors" help="Customize the look and feel of the light mode"> -->
                     	<div class="w-100 row">
                            <label for="tin" string="TIN" class="d-block w-100 py-2"/>
                            <field name="tin"/>
                        </div>
                     	<div class="w-100 row">
                            <label for="api_key" string="API KEY" class="d-block w-100 py-2"/>
                            <field name="api_key"/>
                        </div>
                        	<div class="w-100 row">
                            <label for="client_id" string="Client ID" class="d-block w-100 py-2"/>
                            <field name="client_id"/>
                        </div>
                     	<div class="w-100 row">
                            <label for="client_secret" string="Client Secret" class="d-block w-100 py-2"/>
                            <field name="client_secret"/>
                        </div>
                     	<div class="w-100 row">
                            <label for="base_url" string="Base url" class="d-block w-100 py-2"/>
                            <field name="base_url"/>
                        </div>
                    <!-- </setting> -->
                </block>
            </xpath>
        </field>
    </record>
</odoo>
