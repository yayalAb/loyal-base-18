<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.SelectPartnerButton" t-inherit-mode="extension">
        <xpath expr="//button" position="replace">
             <button class="set-partner btn btn-light btn-lg lh-lg text-truncate w-100" t-on-click="() => this.pos.selectPartner()">
                <div t-if="props.partner" t-esc="props.partner.name" class="text-truncate text-action" />
                <t t-else="">
                    <div class="customer_selection_button d-flex w-100 gap-3 custom_bd_color">
                       <img class="d-flex justify-content-center align-items-center" src="/pos_theme_sapphire/static/description/customer.svg"
					    			alt=""/>
                    <div>Search Customer <div t-if="props.partner" t-esc="props.partner.name" class="text-truncate text-action" /></div>
                </div> 
            </t>
            </button>
        </xpath>
    </t>
 </templates>
 
