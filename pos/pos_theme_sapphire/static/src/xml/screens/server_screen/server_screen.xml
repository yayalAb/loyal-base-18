<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.SaverScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('login-overlay')]" position="replace">
            <div class="col-12 d-flex justify-content-center align-items-center" 
                    style="background: url('/pos_theme_sapphire/static/description/backgroud_image.svg') no-repeat center center; 
                    background-size: cover; 
                    height: 100vh;">
                <div class="d-flex flex-column w-60 gap-3 text-center shadow">
                     <img t-att-height="env.isSmall ? 40 : 182" src="/pos_theme_sapphire/static/description/erp_logo.svg" alt="Logo"/>
                        <div class="timer-hours fs-1" t-esc="time.hours"> </div>
                        <div class="timer-date-container d-flex flex-column smaller">
                            <div class="timer-day" t-esc="time.day"> </div>
                            <div class="timer-date" t-esc="time.date"> </div>
                        </div>

                </div>

             </div>


        </xpath>
     </t>
</templates>
