<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_hr.LoginScreen" t-inherit="point_of_sale.LoginScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('login-overlay')]" position="replace">
            <div class="col-12 d-flex justify-content-center align-items-center" 
             style="
             background: url('/pos_theme_sapphire/static/description/backgroud_image.svg') no-repeat center center; 
             background-size: cover; 
             height: 100vh;">

            <div class="d-flex flex-column w-60 gap-3 text-center shadow"
                    style="background-color: rgba(255, 255, 255, 0.2); 
                            backdrop-filter: blur(30px);  
                            margin: 0 auto;
                            padding: 2rem;         /* increased padding */
                            border-radius: 2rem;"> 
        <img t-attf-src="/web/image?model=res.company&amp;id={{pos.company.id}}&amp;field=logo" 
             alt="Logo"
             style="height: 34px; width: 108px; margin: 0 auto; margin-top:10px;" />
        
        <div class="timer-hours fs-1" t-esc="time.hours"> </div>
        <!-- <div class="timer-date-container d-flex flex-column smaller">
            <div class="timer-day" t-esc="time.day"> </div>
            <div class="timer-date" t-esc="time.date"> </div>
        </div> -->
        <span class="pos_login_heading">“Always strive to go the extra mile.”</span>
        <span class="pos_login_heading1">Open your registry to get going...</span>

        <!-- <button class="but"></button> -->
        <button type="submit" class="btn btn-primary login_color_button gap-3 mb-5" style="width:200px; height:52px; margin: 0 auto;"  t-on-click="() => this.openRegister()">Open Register <i class="fa fa-arrow-right ms-3"></i></button>

        <div class="w-100 d-flex mt-3 justify-content-between">
            <button class="select-logout btn btn-dark btn-lg button_go_to_backed" t-on-click="() => this.clickBack()">
                <span class="d-flex flex-grow-1 align-items-center" > <i class="fa fa-arrow-left me-3"></i> Go to Backend</span>
            </button>
             <!-- t-on-click="() => this.clickLogout()" -->
            <button class="select-logout btn btn-dark btn-lg button_logout" t-on-click="() => this.clickLogout()">
                <span class="d-flex flex-grow-1 align-items-center" > Logout  <i class="fa fa-arrow-right ms-3"></i></span>
            </button>
        </div>
    </div>
</div>

            
              

        </xpath>
       
        
    </t>
</templates>
