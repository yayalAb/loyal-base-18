<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_theme_sapphire.pos_cash_opening_controll" t-inherit="point_of_sale.OpeningControlPopup" t-inherit-mode="extension">
        <xpath expr="//Dialog" position="attributes">
            <attribute name="size">'lg'</attribute>
        </xpath>
        <xpath expr="//h4[contains(@class, 'modal-title')]" position="replace">
           <div class="d-flex justify-content-between w-100">
            <div class="mt-2">Opening Register</div>
                <div><img src="/pos_theme_sapphire/static/description/add-circle.svg" 
                        alt="x"
                        t-on-click="() => this.pos.showLoginScreen()"/>  
                </div>
            </div>

        </xpath>
        <xpath expr="//div[contains(@class, 'opening-cash-section')]" position="replace">
              <label class="form-label">Openineg cash</label>
                <div t-att-class="{ 'w-50': !ui.isSmall }" 
                    class="cash-input-sub-section d-flex gap-2 align-items-center w-100">
                       <!-- <div class="input-group"> -->
                        <Input tModel="[state, 'openingCash']"
                            isValid.bind="env.utils.isValidFloat"
                            callback.bind="handleInputChange"
                            autofocus="true"
                            class="'w-100'"
                            placeholder.translate="Opening Cash"/>
                        <!-- </div> -->
                  
                        <!-- <input type="text"
                        t-model="state.openingCash"
                        class="form-control flex-grow-1"
                        placeholder="Opening Cash"
                        autofocus="true"/> <span class="clear-icon" onclick="document.getElementById('opening-cash-input').value=''">Ã—</span> -->

                    <div class="button icon btn btn-secondary btn-lg lh-lg flex-shrink-0" 
                        t-on-click="openDetailsPopup">
                        <i class="fa fa-money" role="img" title="Open the money details popup"/>
                    </div>
                </div>
        </xpath>
        <xpath expr="//div[contains(@class, 'opening-notes-container')]" position="replace">
             <div class="opening-notes-container d-flex flex-column align-items-start mt-4">
                <label class="form-label" for="openingNotes">Opening note</label>
                <textarea class="opening-notes form-control" id="openingNotes" rows="4" t-model="state.notes" placeholder="Add an opening note..." />
            </div>
        </xpath>
        <xpath expr="//t[@t-set-slot='footer']" position="replace">
            <t t-set-slot="footer">
                 <button class="btn btn-lg btn-defualt cash_cancel_button me-3" style="min-width: 112px; min-height: 50px !important;"
                        t-on-click="() => this.pos.showLoginScreen()">
                        Cancel
                </button>
                <button class="btn btn-lg cash_open_button" style="min-width: 180px; min-height: 50px !important;"
                        t-on-click="confirm">
                    Open Register
                </button>
               
            </t>
        </xpath>
       
        
    </t>
</templates>
